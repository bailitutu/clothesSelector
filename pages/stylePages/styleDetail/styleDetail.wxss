
.upload_item{
  margin:30rpx 20rpx;
}

.img_sec{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content:flex-start;
  align-items: center; 
  align-content: stretch;
}
.img_sec_cell{
  width:25%;
  height:auto;
  margin-bottom:20rpx;
  position: relative;
}
.add_img{
  border:1px solid #b2b2b2;
}
.img_sec_cell>image{
  width:152rpx;
  height:152rpx;
  margin-left:10rpx;
}
.del_btn{
  width:100%;
  height: 100%;
  text-align: center;
  position:absolute;
  top:0;
  left:0;
  z-index: 100;
  line-height: 24rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.del_btn>image{
  width:32rpx;
  height:32rpx;
}


.sec{
  width:100%;
  padding:0 20rpx;
  
}
.sec_cell{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  height: 88rpx;
}
.sec_cell:last-child{
  border:none;
}
.sec_cell text{
  width:200rpx;
}
.sizeItem{
  padding:0 20rpx;
}


.switch_item{
  height:88rpx;
  padding:0 20rpx;
}
.s_row{
  height:100%;
}

.picker_text{
  height:88rpx;
  padding-left:100rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.stylePicker{
  height:88rpx;
}
.styleDetailList>view:last-child{
  border:none;
}

.addBtn{
  background:#b2b2b2;
}
.addBtn.active{
  background:#03a863;
}

/* 颜色尺寸
 */
 .color_cell_head{
   height: 88rpx;
 }
.size_color{
  height:100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.size_color .color_label{
  width:56rpx;
  height: 56rpx;
  margin:0 20rpx;
}
.size_cell{
  height: 88rpx;
  padding: 0 20rpx;

}
.size_cell:last-child{
  border:none;
}




/* 款式分类、商户定位 */
.tag_compo{
  background: #fff;
}
.tag_compo .tag_compo_title{
  height:88rpx;
  padding:20rpx;
}

.tag_list{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  align-content: space-around;
  flex-wrap: wrap;
  padding:0 30rpx 30rpx;
}
.tag_list .tag_cell{
  padding:0 20rpx;
  height:44rpx;
  margin:30rpx 15rpx 0;
  line-height: 44rpx;
  min-width: 92rpx;
  text-align: center;
  font-size:22rpx;
  color:#707070;
  border:1px solid #e2e2e2;
  border-radius: 16rpx;
}