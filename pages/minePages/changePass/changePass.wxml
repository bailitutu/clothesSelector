<view class='body plr-20'>
    <view class='form_item'>
      <form>
        <view class="form_section">
          <input type='text' class='fs-28' confirm-type='next' placeholder="请输入原密码"  bindinput='inputPwd' maxlength='20'  value='{{pwd}}' minlength='6' auto-focus/>
        </view>
        <view class="form_section">
          <input type='password' class='fs-28' value='{{password}}' maxlength='20' minlength='6' bindinput='inputPassword' confirm-type='next' placeholder="请输入6-20位字母，数字组合密码" />
        </view>
        <view class="form_section">
          <input type='password' class='fs-28' value='{{passwordTwo}}' bindinput='inputPassTwo' confirm-type='done' placeholder="请确认密码" />
        </view>
          <button type='button' class='f_btn mt-100' form-type='submit' catchtap='submitFn' loading='{{isSubmit}}'>完成</button>
      </form>
  </view>
</view>
